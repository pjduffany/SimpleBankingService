@{
    ViewData["Title"] = "Login";
}
<!-- TEST: Razor View Loaded -->

<div class="container">
    <div class="sign-up-content">
        <h1>Welcome to Simple Banking Services</h1>
        <p>If you have forgotten your password please use the Forgot Password feature.</p>
    </div>
    <div class="sign-up-form-container">
        <div class="sign-up-form-content">
            <form method="post" asp-controller="Login" asp-action="Authenticate">
                <h3>Please login using your email address and password.</h3>
                <hr>
                <label for="email"><b>Email</b></label>
                <input type="text" name="email" required id="email">
                <label for="psw"><b>Password</b></label>
                <input type="password" name="password" required id="password" />
                <label>
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
                </label>
                <p>By creating an account you agree to our <a href="#" style="color:dodgerblue;flex: 0;">Terms & Privacy</a></p>
                <div class="clearfix">
                    <button type="submit" class="signupbtn">Login</button>
                    <button type="button" class="cancelbtn">Forgot Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

