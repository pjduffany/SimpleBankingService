@{
    ViewData["Title"] = "Signup";
}

<!-- TEST: Razor View Loaded -->
<!-- Navigation Bar -->
<div class="container">
    <div class="sign-up-content">
        <h1>Create your login</h1>
        <p>We'll need your name, email address, and a unique password. You'll use this login to access Robinhood next time.</p>
    </div>
    <div class="sign-up-form-container">
        <div class="sign-up-form-content">
            <form asp-controller="Signup" asp-action="Register" method="post">
                <h3>Enter your first and last name as they appear on your government ID.</h3>
                <hr>

                <label for="firstName"><b>First Name</b></label>
                <input type="text" name="firstName" required id="firstName">

                <label for="lastName"><b>Last Name</b></label>
                <input type="text" name="lastName" required id="lastName">

                <label for="email"><b>Email</b></label>
                <input type="text" placeholder="example@gmail.com" name="emailAddress" required id="email">

                <label for="street"><b>Street</b></label>
                <input type="text" placeholder="1 North Main Street" name="street" required id="street">

                <label for="city"><b>City</b></label>
                <input type="text" placeholder="Allentown" name="city" required id="city">

                <label for="state"><b>State</b></label>
                <input type="text" placeholder="CT" name="state" required id="state">

                <label for="zip"><b>Zip Code</b></label>
                <input type="text" placeholder="06107" name="zipCode" required id="zip">

                <label for="password"><b>Password</b></label>
                <input type="password" placeholder="Enter Password (at least 10 characters)" name="password" required id="password">

                <label for="psw-repeat"><b>Confirm Password</b></label>
                <input type="password" placeholder="Confirm Password" name="psw-repeat" required id="psw-repeat">

                <label>
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
                </label>
                <p>By creating an account you agree to our: <a href="#" style="color:dodgerblue;flex: 0;">Terms & Privacy</a></p>
                <div class="clearfix">
                    <button type="button" class="cancelbtn">Cancel</button>
                    <button type="submit" class="signupbtn">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>
